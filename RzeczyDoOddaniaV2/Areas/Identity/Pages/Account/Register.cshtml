@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Stwórz konto.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>      
            <div class="form-floating">
                <input asp-for="Input.Imie" class="form-control" aria-required="true" />
                <label asp-for="Input.Imie"></label>
                <span asp-validation-for="Input.Imie" class="text-danger"></span>
            </div>      
            <div class="form-floating">
                <input asp-for="Input.Nazwisko" class="form-control" aria-required="true" />
                <label asp-for="Input.Nazwisko"></label>
                <span asp-validation-for="Input.Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Miasto" class="form-control" aria-required="true" />
                <label asp-for="Input.Miasto"></label>
                <span asp-validation-for="Input.Miasto" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.UserName" class="form-control" aria-required="true" />
                <label asp-for="Input.UserName"></label>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Zarejestruj</button>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
